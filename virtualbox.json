{
  "variables": {
    "install_iso": "install-amd64-minimal-20161208.iso",
    "checksum_iso": "c5ebb656ae04dcb2a48b617326e7ee72118228ba6a04c2e2539cfe06301cdf7f79461cd039690bab9b1540bfc7aee244a74285e8a80bf732b412000aec8b06ed",
    "stage4_tar": "stage4-amd64-minimal-20161222.tar.bz2",
    "checksum_tar": "d227afa38defa56d26709310c4c78365398d2f2c446c796a4655abe10aaa3fca8ff362319a435b2f41bc2876728df2b9074eca0d8c57f7320e4ba2e8422f3bac",
    "username": "root",
    "password": "packer"
  },
  "description": "Faithful Stage 3 Gentoo Installation (VirtualBox)",
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "Gentoo",
      "virtualbox_version_file": ".vbox_version",
      "headless": false,
      "keep_registered": true,
      "hard_drive_interface": "sata",

      "boot_wait": "5s",
      "boot_command": [
        "gentoo-nofb",
        "<enter>",
        "<wait10>",
        "<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "/etc/init.d/sshd start",
        "<enter>",
        "<wait>"
      ],

      "guest_os_type": "Gentoo_64",
      "disk_size": 24576,
      "guest_additions_mode": "disable",


      "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/current-install-amd64-minimal/{{user `install_iso`}}",
      "iso_checksum": "{{user `checksum_iso`}}",
      "iso_checksum_type": "sha512",

      "ssh_password": "{{user `password`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_wait_timeout": "2m",

      "vboxmanage": [
          ["modifyvm", "{{.Name}}", "--memory", "4096"],
          ["modifyvm", "{{.Name}}", "--cpus", "8"]
      ],

      "shutdown_command": "shutdown -hP now"
    }
  ],
  "post-processors": [
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "kernel.config",
      "destination": "/tmp/kernel.config"
    },
    {
      "type": "shell",
      "remote_folder": "/tmp/scripts",
      "scripts": [
        "scripts/00_partition.sh",
        "scripts/10_stage4.sh",
        "scripts/20_portage.sh",
        "scripts/30_mounts.sh",
        "scripts/40_make.conf.sh",
        "scripts/41_fstab.sh",
        "scripts/42_inittab.sh",
        "scripts/43_resolv.conf.sh",
        "scripts/44_timezone.sh",
        "scripts/45_package.keywords.sh",
        "scripts/46_network.sh",
        "scripts/50_update.sh",
        "scripts/60_pwgen.sh",
        "scripts/70_kernel.sh",
        "scripts/80_grub.sh",
        "scripts/98_virtualbox.sh",
        "scripts/99_cleanup.sh"

      ],
      "environment_vars": [
        "STAGE4={{user `stage4_tar`}}",
        "CHECKSUM={{user `checksum_tar`}}",
        "VM_TYPE=virtualbox",
        "BASEDIR=/tmp"
      ]
    }
  ]
}
